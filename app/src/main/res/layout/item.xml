<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/sample1"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:outlineProvider="background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="프라다 복조리백"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/iv_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="수원시 영통구 원천동"
        app:layout_constraintStart_toEndOf="@+id/iv_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_name" />

    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="50000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_address" />

    <ImageView
        android:id="@+id/iv_item_chats"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_chats"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_price"
        app:srcCompat="@drawable/ic_chats" />

    <TextView
        android:id="@+id/tv_item_chats"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:text="16"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_chats"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_likes"
        app:layout_constraintTop_toTopOf="@+id/iv_item_chats"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_item_likes"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_likes"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_chats"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_likes"
        app:layout_constraintTop_toTopOf="@+id/tv_item_chats" />

    <TextView
        android:id="@+id/tv_item_likes"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:text="25"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_likes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_item_likes" />

</androidx.constraintlayout.widget.ConstraintLayout>